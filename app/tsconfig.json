{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "sourceMap": true,
    "paths": {
      "@context": ["context"],
      "@interfaces": ["interfaces"],
      "@icons": ["icons"],
      "@config": ["config"],
      "@api": ["api"],
      "@socket": ["socket"],

      "@context/*": ["context/*"],
      "@interfaces/*": ["interfaces"],
      "@icons/*": ["icons/*"],
      "@config/*": ["config"]
    }
  },

  "exclude": ["node_modules", "dist"],
  "include": ["./src", "webpack.dev.config.ts", "webpack.prod.config.ts"]
}
